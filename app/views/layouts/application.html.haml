!!! 5
%html
  %head
    %title Shipments control
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag "http://#{request.host}:8080/application.js", 'application'
    = csrf_meta_tags

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{ href: '/' } Shipment Control
          %ul.nav
            %li
              %a{ href: '/' } Overview
            %li.active
              %a{ href: '/shipments' } Shipments

    .container
      .row
        .span12
          .page-header
            %h1
              Shipment overview
              %small
                = t 'shipments.filter.line'
                .dropdown.js-filter.filter
                  %span.btn.dropdown-toggle{ :'data-toggle' => 'dropdown' }= t 'shipments.filter.no_port'
                  %ul.dropdown-menu

      .row
        .span9.js-shipments

        .span3
          .row-fluid.action-space

            %a.btn.btn-large.btn-primary{ href: '/shipments/new' } Plan Shipment
          %h3 Status
          .row-fluid
            .well
              %p
                Arriving
                %span.badge.js-arriving 5
                next 10 minutes
              %p
                %span.badge.badge-success.js-arrived 10
                ships arrived
              %p
                %span.badge.badge-error.js-sunk 10
                ships sunk

    = yield

